config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

alias fullscreen  move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias upperhalf   move screenOriginX;screenOriginY                  screenSizeX;screenSizeY/2
alias bottomhalf  move screenOriginX;screenOriginY+screenSizeY/2    screenSizeX;screenSizeY/2
alias lefthalf    move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf   move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY

layout verticalSplit    'Google Chrome':REPEAT ${lefthalf}
layout verticalSplit    'Sublime Text':REPEAT ${righthalf}

layout horizontalSplit  'Google Chrome':REPEAT ${upperhalf}
layout horizontalSplit  'Sublime Text':REPEAT ${bottomhalf}

bind ,:cmd;alt hint
bind .:cmd;alt grid padding:2 0:6,6

# location bindings
bind n:cmd;alt ${fullscreen}
bind h:cmd;alt ${lefthalf}
bind j:cmd;alt ${bottomhalf}
bind k:cmd;alt ${upperhalf}
bind l:cmd;alt ${righthalf}

# layout bindings
bind ;:cmd;alt layout verticalSplit
bind m:cmd;alt layout horizontalSplit

# focus bindings
bind h:cmd;ctrl focus left
bind j:cmd;ctrl focus down
bind k:cmd;ctrl focus up
bind l:cmd;ctrl focus right
