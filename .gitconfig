[user]
    name = Julian Grosshauser
    email = hey@juliangrosshauser.com
[credential]
    helper = osxkeychain
[core]
    editor = subl -n -w
    autocrlf = input
    safecrlf = true
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    # make rebase save on os x
    trustctime = false
[help]
    format = web
    autocorrect = 1
[alias]
    ls = ls-files
    ign = ls-files -o -i --exclude-standard
[branch]
    autosetupmerge = true
[push]
    default = simple
[color]
    ui = true
[color "branch"]
    current = white
    local = blue
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = sublime
[mergetool]
	keepBackup = false
[mergetool "sublime"]
    cmd = subl -w $MERGED
    trustExitCode = false
